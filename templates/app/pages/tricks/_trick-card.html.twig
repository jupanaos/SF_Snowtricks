<li class="trick-card">
    <a href="{{ path('app_tricks_item', {'slug': trick.slug}) }}">
        <img src="{{ asset('uploads/' ~ trick.pictures[0].path) }}" alt="">
        <h3>{{ trick.title }}</h3>
    </a>
    <div class="flex justify-between">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a class="flex link" href="{{ path('account_tricks_edit', {'slug': trick.slug} ) }}">Editer</a>
            <form method="post" action="{{ path('account_tricks_delete', {'slug': trick.slug}) }}" onsubmit="return confirm('{{ 'Voulez-vous vraiment supprimer cette figure ?' }}');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trick.id) }}">
                <button type="submit" class="btn btn-outline-dark card-link"><i class="bi bi-trash3-fill"></i></button>
            </form>
        {% endif %}
    </div>
</li>