<!-- Container for the image gallery -->
<div class="slideshow-container">

	<!-- Full-width images -->
    {% for picture in trick.pictures %}
        <div class="slideshow-picture">
            <img class="d-block w-100" src="{{ asset('uploads/' ~ picture.path) }}" alt="{{ picture.caption }}">
        </div>
    {% endfor %}
    {% if trick.videos %}
        {% for video in trick.videos %}
            <div class="slideshow-picture">
                <iframe width="100%" height="700"
                        src="{{ video.url }}"
                        title="YouTube video player"
                        frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                </iframe>
            </div>
        {% endfor %}
    {% endif %}

	<!-- Next and previous buttons -->
	<a class="prev" onclick="plusSlides(-1)">&#10094;</a>
	<a class="next" onclick="plusSlides(1)">&#10095;</a>

	<!-- Image caption -->
    {% if trick.pictures is defined %}
        <div class="caption-container">
            <p id="caption"></p>
        </div>
    {% endif %}

	<!-- Thumbnail images -->
	<div class="slideshow-row">
        {% for picture in trick.pictures %}
            <div class="slideshow-column">
                <img class="demo cursor" src="{{ asset('uploads/' ~ picture.path) }}" alt="{{ picture.caption }}">
            </div>
        {% endfor %}
        {% if trick.videos %}
            {% for video in trick.videos %}
            <div class="demo cursor">
                <iframe width="220" height="150"
                        src="{{ video.url }}"
                        title="YouTube video player"
                        alt="DÃ©monstration de la figure"
                        frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                </iframe>
            </div>
            {% endfor %}
        {% endif %}
        
	</div>

</div>
